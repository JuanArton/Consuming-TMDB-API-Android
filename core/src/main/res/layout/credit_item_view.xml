<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/black">

    <androidx.cardview.widget.CardView
        android:id="@+id/ivContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:backgroundTint="@color/black"
        android:foregroundGravity="center"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true">

        <ImageView
            android:id="@+id/ivCreditPhoto"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/movie_poster"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvCreditName"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivContainer"
        android:layout_alignParentStart="true"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="3"
        android:textColor="@color/white"
        android:textSize="11sp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        tools:text="@string/credit_name" />

    <TextView
        android:id="@+id/tvCharacterName"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvCreditName"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="3"
        android:textColor="@color/grey"
        android:textSize="11sp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        tools:text="@string/character_name" />

</RelativeLayout>
