<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.activity.detail.DetailMovieActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieTrailerLoading"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:elevation="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/ivMovieBackdropGradient"
            app:layout_constraintStart_toStartOf="@+id/ivMovieBackdropGradient"
            app:layout_constraintTop_toTopOf="@+id/ivMovieBackdropGradient"
            app:lottie_autoPlay="true"
            app:lottie_fileName="moody-giraffe.json"
            app:lottie_loop="true" />

        <TextView
            android:id="@+id/tvLoading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading"
            android:textColor="@color/white"
            android:elevation="2dp"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/lottieTrailerLoading"
            app:layout_constraintStart_toStartOf="@+id/lottieTrailerLoading"
            app:layout_constraintTop_toBottomOf="@+id/lottieTrailerLoading" />

        <FrameLayout
            android:id="@+id/ivMovieBackdropGradient"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:id="@+id/ivMovieBackdrop"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/poster"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
            </ImageView>

            <View
                android:id="@+id/gradient"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bottom_gradient" />
        </FrameLayout>

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/piRatingBar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:progress="70"
            android:elevation="3dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            app:indicatorSize="40dp"
            app:layout_constraintTop_toBottomOf="@+id/tvRuntime"
            app:layout_constraintStart_toEndOf="@+id/ivContainer"
            app:trackColor="#40E50914"
            app:trackCornerRadius="10dp"
            app:trackThickness="3dp" />

        <TextView
            android:id="@+id/tvRatingPercentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/percentage_hint"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="13sp"
            android:elevation="3dp"
            app:layout_constraintBottom_toBottomOf="@+id/piRatingBar"
            app:layout_constraintEnd_toEndOf="@+id/piRatingBar"
            app:layout_constraintStart_toStartOf="@+id/piRatingBar"
            app:layout_constraintTop_toTopOf="@+id/piRatingBar" />

        <androidx.cardview.widget.CardView
            android:id="@+id/ivContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivMovieBackdropGradient"
            android:backgroundTint="@color/black"
            android:orientation="vertical"
            android:layout_marginStart="20dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintBottom_toBottomOf="@+id/ivMovieBackdropGradient"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ivMoviePoster"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:contentDescription="@string/poster"
                android:src="@drawable/baseline_local_movies_24" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvMovieTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/movie_title"
            android:maxLines="3"
            android:singleLine="false"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivContainer"
            app:layout_constraintTop_toTopOf="@+id/ivContainer" />

        <TextView
            android:id="@+id/tvGenres"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="13sp"
            android:textStyle="bold"
            android:hint="@string/genres"
            app:layout_constraintTop_toBottomOf="@id/tvMovieTitle"
            app:layout_constraintStart_toEndOf="@id/ivContainer"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvReleaseDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:hint="@string/release_date"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="@+id/ivMovieBackdropGradient"
            app:layout_constraintStart_toEndOf="@id/ivContainer"
            app:layout_constraintTop_toBottomOf="@id/tvGenres" />

        <TextView
            android:id="@+id/tvRuntime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:hint="@string/runtime"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivContainer"
            app:layout_constraintTop_toBottomOf="@id/tvReleaseDate" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btFavorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/favorite"
            android:textAllCaps="false"
            android:textSize="11sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            app:iconSize="18dp"
            app:backgroundTint="@color/black"
            app:cornerRadius="50dp"
            app:icon="@drawable/baseline_favorite_border_18"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivContainer"
            app:strokeColor="@color/white"
            app:strokeWidth="1dp" />

        <TextView
            android:id="@+id/tvOverviewContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:hint="@string/overview"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="13sp"
            app:layout_constraintTop_toBottomOf="@+id/btFavorite" />

        <TextView
            android:id="@+id/tvTrailerHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:text="@string/trailer"
            android:textColor="@color/red"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvOverviewContent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvTrailerItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="20dp"
            android:orientation="horizontal"
            android:clipToPadding="false"
            app:layout_constraintTop_toBottomOf="@id/tvTrailerHeader"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>